<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="BookingApp.Views.BookingPage"
            Title="BookingPage">

    <StackLayout Padding="10">
        <Label 
            Text="Booking Page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Add Admin" Clicked="OnAddAdminClicked"/>
        <Button Text="Add Room" Clicked="OnAddRoomClicked"/>
        <Button Text="Add Slot" Clicked="OnAddSlotClicked"/>
        <Button Text="List Rooms" Clicked="OnListRoomsClicked"/>
        <Label x:Name="StatusLabel" Text="Status: Waiting for actions" />

        <Button Text="Back"
            Clicked="OnBackButtonClicked"
            HorizontalOptions="Center"
            Grid.Row="3"
            Margin="0,10,0,0" />
        
    </StackLayout>
    
</ContentPage>