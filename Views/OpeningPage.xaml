<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="BookingApp.Views.OpeningPage"
            Title="OpeningPage">


    <Grid Padding="20" RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="Auto">
        <Label Text="Welcome to the Study Room Booking App!"
            FontSize="16"
            HorizontalOptions="Center"
            Grid.Row="0" />

        <Button Text="Book A Room"
            Clicked="OnBookButtonClicked"
            HorizontalOptions="Center"
            Grid.Row="1"
            Margin="0,20,0,10" />

        <Button Text="Manage Your Bookings"
            Clicked="OnManageButtonClicked"
            HorizontalOptions="Center"
            Grid.Row="2"
            Margin="0,10,0,10" />
    </Grid>
    
</ContentPage>